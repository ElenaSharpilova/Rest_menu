<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RestMenu" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="windowNoTitle">true</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="page_title">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="label">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/label_bgr_yellow</item>
        <item name="drawableStartCompat">@drawable/ic_boy</item>
        <item name="fontFamily">@font/rubik</item>
    </style>

    <style name="label_not_bgr">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_green</item>
        <item name="android:background">@drawable/label_notbgr</item>
        <item name="fontFamily">@font/rubik</item>
    </style>

    <style name="search_view">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#61000000</item>
        <item name="android:drawableEnd">@drawable/ic_filtr</item>
        <item name="fontFamily">@font/rubik</item>
    </style>

    <style name="label_scrollview2">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="rv_title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_green</item>
        <item name="android:text">OPEN</item>
        <item name="drawableStartCompat">@drawable/ic_cycle</item>
    </style>

    <style name="rv_time">
        <item name="android:textSize">13sp</item>
        <item name="android:text">@string/rv_time_order</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rv_time_bgr</item>
    </style>

</resources>