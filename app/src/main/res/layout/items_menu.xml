<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="315dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/iv_burger" />

    <TextView
        android:id="@+id/tv_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/poppins"
        android:text="Burger Craze"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/tv_open_or_close"
        style="@style/rv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/poppins"
        app:layout_constraintStart_toEndOf="@+id/tv_item"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/tv_time_order"
        style="@style/rv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/rubik"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.955"
        app:layout_constraintStart_toEndOf="@id/tv_open_or_close"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/iv_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_star"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/tv_item"
        app:layout_constraintTop_toBottomOf="@id/tv_item"/>

    <TextView
        android:id="@+id/tv_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/rubik"
        android:text="4.6 (601)"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/iv_star"
        app:layout_constraintTop_toBottomOf="@id/tv_item" />

    <TextView
        android:id="@+id/tv_name_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/rubik"
        android:text="American"
        app:layout_constraintStart_toEndOf="@id/tv_score"
        app:layout_constraintTop_toBottomOf="@id/tv_item" />

    <ImageView
        android:id="@+id/im_dot1"
        android:src="@drawable/ic_cycle_grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/tv_name_country"
        app:layout_constraintTop_toBottomOf="@id/tv_item"/>

    <TextView
        android:id="@+id/tv_name_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/rubik"
        android:text="Burger"
        app:layout_constraintStart_toEndOf="@id/im_dot1"
        app:layout_constraintTop_toBottomOf="@id/tv_item" />

    <TextView
        android:id="@+id/tv_cost_delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik"
        android:text="Delivery: FREE"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/iv_star"
        app:layout_constraintTop_toBottomOf="@id/iv_star" />

    <ImageView
        android:id="@+id/im_dot2"
        android:src="@drawable/ic_cycle_grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/tv_cost_delivery"
        app:layout_constraintTop_toBottomOf="@id/tv_score"/>

    <TextView
        android:id="@+id/min_cost_delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/rubik"
        android:text="Minimum: $10"
        android:textSize="10sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_cost_delivery"
        app:layout_constraintStart_toEndOf="@id/im_dot2" />

    <ImageView
        android:id="@+id/iv_navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:src="@drawable/ic_navigation"
        app:layout_constraintBottom_toBottomOf="@+id/distance_delivery"
        app:layout_constraintStart_toEndOf="@+id/tv_name_food"
        app:layout_constraintTop_toTopOf="@+id/distance_delivery"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/distance_delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/rubik"
        android:text="1.5 km away"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toEndOf="@id/iv_navigation"
        app:layout_constraintTop_toBottomOf="@+id/tv_time_order" />

</androidx.constraintlayout.widget.ConstraintLayout>